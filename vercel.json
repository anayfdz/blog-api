{
    "version": 2,
    "builds": [
      { "src": "index.ts", "use": "@vercel/node",
    "config": {
        "includeFiles": [
            "dist/**/*",
            "uploads/**/*",
            "tsconfig.json"
        ],
        "maxLambdaSize": "50mb"
    }
    }
    ],
    "functions": {
      "app/api/**/*": {
      "maxDuration": 5
    }
    },
    "routes": [
      { "src": "/(.*)", "dest": "/index.ts" }
    ],
    "env": {
        "NODE_ENV": "production",
        "PORT": "3000"
    }
  }
  